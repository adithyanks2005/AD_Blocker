{
  "manifest_version": 3,
  "name": "Luxury Ad Blocker",
  "version": "1.0",
  "description": "Premium ad blocker with luxury UI",

  "permissions": [
    "declarativeNetRequest",
    "storage",
    "activeTab"
  ],

  "host_permissions": ["<all_urls>"],

  "icons": {
    "128": "icon.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
